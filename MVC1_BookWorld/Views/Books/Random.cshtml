@using MVC1_BookWorld.ViewModel
     @*pass model from controller*@
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customers.Count>5?"Popular":null;
}

@*<h2>@ViewData["RandomBook"].</h2>*@
<h2 class="@className">@Model.Book.Name</h2>  @*if true shows this classname*@

@if

    (Model.Customers.Count==0)
    {
        <text>No one has rented this book before.</text>
}
else
    {
        <ul>
            @foreach(var customer in Model.Customers)
            {
                <li>@customer.Name</li>
            }
        </ul>
    }

