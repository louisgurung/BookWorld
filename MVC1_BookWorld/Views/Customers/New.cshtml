@model Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>



@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDate)          @*//label for focuses on box when cursor moves around*@
        @*<label for="Birthdate">Date of Birth</label> //while using this approach manually change changes*@ 

        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" })

    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m=>m.IsSubscribedToNewsLetter)Subscribed to NewsLetter?
        </label>
    </div>
}
